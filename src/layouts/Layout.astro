---
import { ViewTransitions } from 'astro:transitions';
interface Props { title: string; description: string; image?: string; url?: string; }
const { title, description, image = '/og-default.png', url = Astro.url.href } = Astro.props;
const GA_ID = import.meta.env.PUBLIC_GA_ID;
const ADSENSE_ID = import.meta.env.PUBLIC_ADSENSE_ID;
const siteUrl = 'https://protetordigital.com.br';
---
<!DOCTYPE html>
<html lang="pt-BR" class="dark scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="theme-color" content="#4f8ef7" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="manifest" href="/manifest.json" />
  <link rel="canonical" href={url} />
  <link rel="sitemap" href="/sitemap-index.xml" />
  <link rel="alternate" type="application/rss+xml" title="ProtetorDigital Blog" href="/rss.xml" />
  <title>{title} | ProtetorDigital</title>
  <meta name="description" content={description} />
  <meta name="keywords" content="proteção digital, segurança online, senha forte, verificar vazamento, URL maliciosa, privacidade, LGPD, cybersegurança brasil" />
  <meta name="robots" content="index, follow" />
  <meta name="author" content="ProtetorDigital" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={url} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={`${siteUrl}${image}`} />
  <meta property="og:locale" content="pt_BR" />
  <meta property="og:site_name" content="ProtetorDigital" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={`${siteUrl}${image}`} />
  <script type="application/ld+json">{"@context":"https://schema.org","@type":"WebSite","name":"ProtetorDigital","url":"https://protetordigital.com.br","description":"Ferramentas gratuitas de proteção digital para brasileiros","inLanguage":"pt-BR"}</script>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&family=IBM+Plex+Mono:wght@400;500;600&display=swap" rel="stylesheet" />
  {ADSENSE_ID && (<script async src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${ADSENSE_ID}`} crossorigin="anonymous"></script>)}
  {GA_ID && (<><script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script><script define:vars={{ GA_ID }}>window.dataLayer=window.dataLayer||[];function gtag(){dataLayer.push(arguments);}gtag('js',new Date());gtag('config',GA_ID,{anonymize_ip:true});</script></>)}
  <script is:inline>
    const t = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
    document.documentElement.classList.toggle('dark', t === 'dark');
    document.documentElement.classList.toggle('light', t === 'light');
  </script>
  <style>
    :root {
      --blue: #4f8ef7;
      --blue-dim: #3a76e0;
      --blue-pale: #7aaeff;
      --cyan: #38bdf8;
      --red: #ef4444;
      --amber: #f59e0b;
      --emerald: #10b981;
      --font-sans: 'Manrope', sans-serif;
      --font-mono: 'IBM Plex Mono', monospace;
    }
    .dark {
      --bg: #080c14;
      --bg2: #0d1220;
      --surface: #111827;
      --surface2: #161e2e;
      --surface3: #1a2538;
      --border: #1e2d47;
      --border2: #263547;
      --text: #e2e8f4;
      --text-dim: #7b90aa;
      --text-muted: #3a4f6a;
      --nav-bg: rgba(8,12,20,0.9);
      --card-shadow: 0 1px 0 0 #1e2d47;
    }
    .light {
      --bg: #f4f7fc;
      --bg2: #ffffff;
      --surface: #ffffff;
      --surface2: #f8faff;
      --surface3: #eef2fa;
      --border: #dde3ef;
      --border2: #c8d3e8;
      --text: #0f172a;
      --text-dim: #475569;
      --text-muted: #94a3b8;
      --nav-bg: rgba(244,247,252,0.92);
      --card-shadow: 0 1px 3px rgba(0,0,0,0.06), 0 1px 0 0 #dde3ef;
    }
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    html { background: var(--bg); color: var(--text); font-family: var(--font-sans); }
    body { background: var(--bg); min-height: 100vh; overflow-x: hidden; transition: background 0.25s, color 0.25s; }

    .dot-bg {
      background-image: radial-gradient(var(--border) 1px, transparent 1px);
      background-size: 28px 28px;
    }
    .font-mono { font-family: var(--font-mono); }

    .card {
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: 12px;
      box-shadow: var(--card-shadow);
      transition: border-color 0.2s, box-shadow 0.2s;
    }
    .card-hover:hover {
      border-color: var(--border2);
      box-shadow: 0 4px 20px rgba(0,0,0,0.15), var(--card-shadow);
    }

    .btn-primary {
      background: var(--blue);
      color: #fff;
      font-family: var(--font-sans);
      font-weight: 700;
      border-radius: 8px;
      border: none;
      cursor: pointer;
      transition: all 0.2s;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      letter-spacing: -0.01em;
    }
    .btn-primary:hover { background: var(--blue-dim); box-shadow: 0 4px 20px rgba(79,142,247,0.3); transform: translateY(-1px); }
    .btn-primary:active { transform: translateY(0); }
    .btn-primary:disabled { background: var(--border2); color: var(--text-muted); cursor: not-allowed; box-shadow: none; transform: none; }

    .btn-ghost {
      background: transparent;
      color: var(--text-dim);
      border: 1px solid var(--border2);
      border-radius: 8px;
      font-family: var(--font-sans);
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }
    .btn-ghost:hover { border-color: var(--blue); color: var(--blue); }

    .input {
      background: var(--bg2);
      border: 1px solid var(--border2);
      border-radius: 8px;
      color: var(--text);
      font-family: var(--font-mono);
      font-size: 14px;
      padding: 12px 16px;
      width: 100%;
      outline: none;
      transition: border-color 0.2s, box-shadow 0.2s;
    }
    .input::placeholder { color: var(--text-muted); }
    .input:focus { border-color: var(--blue); box-shadow: 0 0 0 3px rgba(79,142,247,0.15); }

    .tag {
      font-family: var(--font-mono);
      font-size: 11px;
      font-weight: 500;
      padding: 3px 8px;
      border-radius: 4px;
      background: var(--surface2);
      color: var(--text-dim);
      border: 1px solid var(--border);
    }
    .tag-blue { background: rgba(79,142,247,0.08); color: var(--blue-pale); border-color: rgba(79,142,247,0.2); }
    .tag-red { background: rgba(239,68,68,0.08); color: #fca5a5; border-color: rgba(239,68,68,0.2); }
    .tag-cyan { background: rgba(56,189,248,0.08); color: #7dd3fc; border-color: rgba(56,189,248,0.2); }
    .tag-amber { background: rgba(245,158,11,0.08); color: #fcd34d; border-color: rgba(245,158,11,0.2); }
    .tag-emerald { background: rgba(16,185,129,0.08); color: #6ee7b7; border-color: rgba(16,185,129,0.2); }
    .light .tag-blue { color: #2563eb; }
    .light .tag-cyan { color: #0284c7; }
    .light .tag-amber { color: #b45309; }
    /* Aliases for backward compat */
    .tag-green { background: rgba(16,185,129,0.08); color: #6ee7b7; border-color: rgba(16,185,129,0.2); }
    .tag-orange { background: rgba(245,158,11,0.08); color: #fcd34d; border-color: rgba(245,158,11,0.2); }
    .light .tag-green { color: #059669; }
    .light .tag-orange { color: #b45309; }

    .nav-link {
      color: var(--text-dim);
      font-family: var(--font-sans);
      font-weight: 600;
      font-size: 14px;
      transition: color 0.15s;
      text-decoration: none;
      padding: 6px 12px;
      border-radius: 7px;
    }
    .nav-link:hover { color: var(--text); background: var(--surface2); }
    .nav-link.active { color: var(--blue); }

    .status-dot {
      width: 7px; height: 7px;
      background: var(--emerald);
      border-radius: 50%;
      display: inline-block;
      animation: pulse-dot 2.5s ease-in-out infinite;
    }
    @keyframes pulse-dot {
      0%, 100% { box-shadow: 0 0 0 0 rgba(16,185,129,0.5); }
      50% { box-shadow: 0 0 0 5px rgba(16,185,129,0); }
    }

    ::-webkit-scrollbar { width: 5px; }
    ::-webkit-scrollbar-track { background: var(--bg2); }
    ::-webkit-scrollbar-thumb { background: var(--border2); border-radius: 3px; }
    ::-webkit-scrollbar-thumb:hover { background: var(--blue-dim); }

    .divider { height: 1px; background: var(--border); }
    .strength-bar { height: 3px; border-radius: 2px; transition: width 0.4s cubic-bezier(0.16,1,0.3,1), background 0.3s; }
    input[type="range"] { accent-color: var(--blue); }
    input[type="checkbox"] { accent-color: var(--blue); }

    #mobile-menu { max-height: 0; overflow: hidden; transition: max-height 0.3s ease; }
    #mobile-menu.open { max-height: 400px; }

    .spinner { width: 16px; height: 16px; border: 2px solid rgba(79,142,247,0.2); border-top-color: var(--blue); border-radius: 50%; animation: spin 0.7s linear infinite; }
    @keyframes spin { to { transform: rotate(360deg); } }

    .prose h1, .prose h2, .prose h3 { font-family: var(--font-sans); color: var(--text); }
    .prose h2 { font-size: 1.3rem; font-weight: 700; margin: 2rem 0 0.75rem; padding-bottom: 0.5rem; border-bottom: 1px solid var(--border); }
    .prose h3 { font-size: 1.1rem; font-weight: 700; margin: 1.5rem 0 0.5rem; }
    .prose p { color: var(--text-dim); line-height: 1.8; margin-bottom: 1rem; }
    .prose a { color: var(--blue); text-decoration: underline; text-underline-offset: 3px; }
    .prose ul, .prose ol { color: var(--text-dim); padding-left: 1.5rem; margin-bottom: 1rem; }
    .prose li { margin-bottom: 0.5rem; line-height: 1.7; }
    .prose strong { color: var(--text); }
    .prose code { font-family: var(--font-mono); font-size: 0.85em; background: var(--surface2); padding: 2px 6px; border-radius: 4px; border: 1px solid var(--border); color: var(--cyan); }
    .prose pre { background: var(--surface); border: 1px solid var(--border); border-radius: 8px; padding: 1rem; overflow-x: auto; margin-bottom: 1rem; }
    .prose pre code { background: none; border: none; padding: 0; }

    @keyframes slideUp { from { opacity: 0; transform: translateY(14px); } to { opacity: 1; transform: translateY(0); } }
    @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
    @keyframes float { 0%,100% { transform: translateY(0); } 50% { transform: translateY(-5px); } }

    .animate-slide-up { animation: slideUp 0.45s cubic-bezier(0.16,1,0.3,1) both; }
    .animate-fade-in { animation: fadeIn 0.4s ease both; }
    .animate-float { animation: float 6s ease-in-out infinite; }

    .stagger-1 { animation-delay: 0.06s; }
    .stagger-2 { animation-delay: 0.12s; }
    .stagger-3 { animation-delay: 0.18s; }
    .stagger-4 { animation-delay: 0.24s; }

    /* Legacy compat */
    .glow { box-shadow: 0 0 20px rgba(79,142,247,0.12); }
    .text-glow { color: var(--blue-pale); }
    .font-display { font-family: var(--font-sans); }
    .terminal-line::before { content: '> '; color: var(--blue); font-family: var(--font-mono); }
    .animate-ping2 { animation: pulse-dot 2s ease-out infinite; }
  </style>
  <ViewTransitions />
</head>
<body>

  {ADSENSE_ID && (
    <div class="hidden md:flex justify-center" style="background:var(--bg2); border-bottom:1px solid var(--border); padding:8px 0;">
      <ins class="adsbygoogle" style="display:inline-block;width:728px;height:90px" data-ad-client={ADSENSE_ID} data-ad-slot="HEADER_SLOT_ID"></ins>
      <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
    </div>
  )}

  <!-- NAV -->
  <nav id="main-nav" style="position:sticky;top:0;z-index:50;backdrop-filter:blur(20px);-webkit-backdrop-filter:blur(20px);background:var(--nav-bg);border-bottom:1px solid var(--border);">
    <div style="max-width:1200px;margin:0 auto;padding:0 20px;display:flex;align-items:center;justify-content:space-between;height:58px;">

      <a href="/" style="display:flex;align-items:center;gap:10px;text-decoration:none;">
        <div style="width:30px;height:30px;background:var(--blue);border-radius:7px;display:flex;align-items:center;justify-content:center;">
          <svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
          </svg>
        </div>
        <span style="font-family:var(--font-sans);font-weight:800;font-size:17px;color:var(--text);letter-spacing:-0.03em;">ProtetorDigital</span>
      </a>

      <div style="display:none;" id="desktop-nav">
        <a href="/tools/senha" class="nav-link">Senhas</a>
        <a href="/tools/link" class="nav-link">URLs</a>
        <a href="/tools/vazamento" class="nav-link">Vazamentos</a>
        <a href="/blog" class="nav-link">Blog</a>
      </div>

      <div style="display:flex;align-items:center;gap:8px;">
        <button id="theme-btn" aria-label="Alternar tema" style="width:38px;height:38px;border-radius:8px;border:1px solid var(--border2);background:var(--surface);cursor:pointer;display:flex;align-items:center;justify-content:center;transition:all 0.2s;">
          <svg id="theme-icon-dark" width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" style="color:var(--text-dim);">
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
          </svg>
          <svg id="theme-icon-light" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" style="display:none;color:var(--text-dim);">
            <circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
          </svg>
        </button>
        <button id="mobile-btn" aria-label="Menu" style="width:38px;height:38px;border-radius:8px;border:1px solid var(--border2);background:var(--surface);cursor:pointer;display:flex;align-items:center;justify-content:center;">
          <svg width="17" height="17" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
            <line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="18" x2="21" y2="18"/>
          </svg>
        </button>
      </div>
    </div>
    <div id="mobile-menu" style="background:var(--surface);border-top:1px solid var(--border);">
      <div style="padding:10px 16px;display:flex;flex-direction:column;gap:2px;">
        <a href="/tools/senha" class="nav-link" style="padding:11px 16px;">Analisador de Senhas</a>
        <a href="/tools/link" class="nav-link" style="padding:11px 16px;">Scanner de URLs</a>
        <a href="/tools/vazamento" class="nav-link" style="padding:11px 16px;">Verificador de Vazamentos</a>
        <a href="/blog" class="nav-link" style="padding:11px 16px;">Blog de Segurança</a>
      </div>
    </div>
  </nav>

  <main style="min-height:100vh;">
    <slot />
  </main>

  <footer style="background:var(--bg2);border-top:1px solid var(--border);margin-top:80px;">
    {ADSENSE_ID && (
      <div class="md:hidden" style="display:flex;justify-content:center;padding:8px 0;border-bottom:1px solid var(--border);">
        <ins class="adsbygoogle" style="display:inline-block;width:320px;height:50px" data-ad-client={ADSENSE_ID} data-ad-slot="FOOTER_MOBILE_SLOT_ID"></ins>
        <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
      </div>
    )}
    <div style="max-width:1200px;margin:0 auto;padding:48px 20px 32px;">
      <div style="display:grid;grid-template-columns:1fr;gap:40px;" class="footer-grid">
        <div>
          <a href="/" style="display:flex;align-items:center;gap:9px;text-decoration:none;margin-bottom:14px;">
            <div style="width:26px;height:26px;background:var(--blue);border-radius:6px;display:flex;align-items:center;justify-content:center;">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
            </div>
            <span style="font-family:var(--font-sans);font-weight:800;font-size:15px;color:var(--text);letter-spacing:-0.02em;">ProtetorDigital</span>
          </a>
          <p style="font-size:13px;color:var(--text-dim);line-height:1.7;max-width:270px;">Ferramentas gratuitas de proteção digital para o brasileiro. Análise 100% local — seus dados nunca saem do dispositivo.</p>
          <div style="margin-top:16px;display:flex;gap:6px;flex-wrap:wrap;">
            <span class="tag tag-blue">LGPD</span>
            <span class="tag tag-cyan">100% Grátis</span>
            <span class="tag">BR</span>
          </div>
        </div>
        <div style="display:grid;grid-template-columns:1fr 1fr;gap:32px;">
          <div>
            <p style="font-family:var(--font-sans);font-weight:700;font-size:12px;color:var(--text);margin-bottom:14px;text-transform:uppercase;letter-spacing:0.08em;">Ferramentas</p>
            <div style="display:flex;flex-direction:column;gap:10px;">
              <a href="/tools/senha" style="font-size:13px;color:var(--text-dim);text-decoration:none;transition:color 0.15s;" onmouseover="this.style.color='var(--blue)'" onmouseout="this.style.color='var(--text-dim)'">Analisador de Senhas</a>
              <a href="/tools/link" style="font-size:13px;color:var(--text-dim);text-decoration:none;transition:color 0.15s;" onmouseover="this.style.color='var(--blue)'" onmouseout="this.style.color='var(--text-dim)'">Scanner de URLs</a>
              <a href="/tools/vazamento" style="font-size:13px;color:var(--text-dim);text-decoration:none;transition:color 0.15s;" onmouseover="this.style.color='var(--blue)'" onmouseout="this.style.color='var(--text-dim)'">Verificador de Vazamentos</a>
            </div>
          </div>
          <div>
            <p style="font-family:var(--font-sans);font-weight:700;font-size:12px;color:var(--text);margin-bottom:14px;text-transform:uppercase;letter-spacing:0.08em;">Info</p>
            <div style="display:flex;flex-direction:column;gap:10px;">
              <a href="/blog" style="font-size:13px;color:var(--text-dim);text-decoration:none;" onmouseover="this.style.color='var(--blue)'" onmouseout="this.style.color='var(--text-dim)'">Blog</a>
              <a href="/rss.xml" style="font-size:13px;color:var(--text-dim);text-decoration:none;" onmouseover="this.style.color='var(--blue)'" onmouseout="this.style.color='var(--text-dim)'">RSS Feed</a>
              <a href="/politica-privacidade" style="font-size:13px;color:var(--text-dim);text-decoration:none;" onmouseover="this.style.color='var(--blue)'" onmouseout="this.style.color='var(--text-dim)'">Privacidade</a>
            </div>
          </div>
        </div>
      </div>
      <div class="divider" style="margin:32px 0 20px;"></div>
      <div style="display:flex;flex-wrap:wrap;justify-content:space-between;align-items:center;gap:12px;">
        <p style="font-size:12px;color:var(--text-muted);font-family:var(--font-mono);">© {new Date().getFullYear()} ProtetorDigital — Todos os direitos reservados</p>
        <p style="font-size:12px;color:var(--text-muted);">Conforme a <a href="https://www.gov.br/anpd" target="_blank" rel="noopener" style="color:var(--blue);text-decoration:none;">LGPD</a></p>
      </div>
    </div>
  </footer>

  <style>
    @media (min-width: 768px) {
      #desktop-nav { display: flex !important; align-items: center; gap: 2px; }
      #mobile-btn { display: none !important; }
      .footer-grid { grid-template-columns: 1fr 1fr !important; }
    }
  </style>

  <script>
    const btn = document.getElementById('theme-btn');
    const iconDark = document.getElementById('theme-icon-dark');
    const iconLight = document.getElementById('theme-icon-light');
    function applyTheme(theme) {
      const isDark = theme === 'dark';
      document.documentElement.classList.toggle('dark', isDark);
      document.documentElement.classList.toggle('light', !isDark);
      if (iconDark) iconDark.style.display = isDark ? 'block' : 'none';
      if (iconLight) iconLight.style.display = isDark ? 'none' : 'block';
      localStorage.setItem('theme', theme);
    }
    const current = document.documentElement.classList.contains('dark') ? 'dark' : 'light';
    if (iconDark) iconDark.style.display = current === 'dark' ? 'block' : 'none';
    if (iconLight) iconLight.style.display = current === 'light' ? 'block' : 'none';
    btn?.addEventListener('click', () => {
      const isDark = document.documentElement.classList.contains('dark');
      applyTheme(isDark ? 'light' : 'dark');
    });
    const mobileBtn = document.getElementById('mobile-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    mobileBtn?.addEventListener('click', () => { mobileMenu?.classList.toggle('open'); });
    const path = window.location.pathname;
    document.querySelectorAll('.nav-link').forEach(link => {
      if (link.getAttribute('href') === path || (path.startsWith('/blog') && link.getAttribute('href') === '/blog')) {
        link.classList.add('active');
