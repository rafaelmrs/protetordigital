      <ins class="adsbygoogle" style="display:inline-block;width:728px;height:90px" data-ad-client={ADSENSE_ID} data-ad-slot="HEADER_LEADERBOARD_SLOT"></ins>
      <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
