---
interface Props {
  slot: string;
  format?: string;
  width?: number;
  height?: number;
  className?: string;
}

const { slot, format = 'auto', width, height, className = '' } = Astro.props;
const ADSENSE_ID = import.meta.env.PUBLIC_ADSENSE_ID;
---

{ADSENSE_ID && (
  <div class={`flex justify-center my-4 ${className}`}>
    <ins
      class="adsbygoogle"
      style={width && height ? `display:inline-block;width:${width}px;height:${height}px` : 'display:block'}
      data-ad-client={ADSENSE_ID}
      data-ad-slot={slot}
      data-ad-format={format}
      data-full-width-responsive="true"
    ></ins>
    <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
  </div>
)}
